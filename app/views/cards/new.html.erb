<%= render "shared/second-header"%>
<div class ="CardPage">
  <%= form_with  url: cards_path, id: 'charge-form', class: 'card-all',local: true do |f| %>
    <div class = "CardPage-main">
     <div class = "card-num-zorn">
      <div class = "Ragistration-form">
        <h1 class="Card-Ragistration">
            カード登録
        </h1>
        <br>
      </div>
      <div class='card-num'>
        <%= f.label :number, "【カード番号】" %>
        <span class="indispensable">必須</span>
        <%= f.text_field :number, class:"input-default", placeholder:"カード番号(半角英数字)", maxlength:"16" %>
        <div class='available-card'>
          <%= image_tag 'card-visa.gif', class: 'card-logo'%>
           <%= image_tag 'card-mastercard.gif', class: 'card-logo'%> 
           <%= image_tag 'card-jcb.gif', class: 'card-logo'%> 
           <%= image_tag 'card-amex.gif', class: 'card-logo'%> 
         </div>  
      </div>
      <div class='cvc-form'>
        <%= f.label :cvc ,"【ＣＶＣ】" %>
        <span class="indispensable">必須</span>
        <%= f.text_field :cvc, class:"input-default", placeholder:"カード背面にある3桁の番号", maxlength:"4" %>
      </div>
      <div class ="days-card">
         <p>【有効期限】</p> 
         <span class="indispensable">必須</span>
        <div class='input-expiration-date-wrap'>
         <h1 class = "input-expiration-date-left">
           <%= f.select :exp_month, 1..12, {include_blank: "---"}, class: "left" %>
             <p>月</p>
         </h1>
         <h2 class = "input-expiration-date-right" >
           <%= f.select :exp_year, 20..25, {include_blank: "---"}, class: "right" %>
             <p>年</p>
         </h2>
       </div>
      </div>
    </div>
    <div class = "card-btn-form">
      <div class ="card-button">
        <%= f.submit "登録する" %> 
      </div>
    </div>
  </div>
 <% end %>
</div>
      
   

<footer class="card-sell-footer">
    <ul class="menu-card">
      <li><a href="#">プライバシーポリシー</a></li>
      <li><a href="#">フリマ利用規約</a></li>
      <li><a href="#">特定商取引に関する表記</a></li>
    </ul>
    <%= link_to image_tag('furima-logo-color.png' , size: '185x50'), "/" %>
    <p class="link">
      ©︎Furima,Inc.
    </p>
</footer>
